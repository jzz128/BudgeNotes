<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4px"
    android:stretchColumns="1" >

    <TableRow>

        <TextView
            android:paddingRight="2px"
            android:text="Account:" />

        <Spinner
            android:id="@+id/transSpinnerAccount"
            android:maxWidth="140sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:paddingRight="2px"
            android:text="Name:" />

        <EditText
            android:id="@+id/transEditName"
            android:maxWidth="140sp" />
    </TableRow>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2px"
            android:paddingRight="2px"
            android:text="Date:"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/transEditDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="date" >

            <requestFocus />
        </EditText>

        <ImageButton
            android:id="@+id/transButtonCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/calendar_icon" />
    </LinearLayout>
    <TableRow>

        <TextView
            android:paddingLeft="2px"
            android:paddingRight="2px"
            android:text="Amount:" />

        <EditText
            android:id="@+id/transEditAmount"
            android:digits="0123456789."
            android:inputType="numberDecimal" />
    </TableRow>

    <TableRow>

    <TextView android:text="Category" />

        <Spinner
            android:id="@+id/transSpinnerCategory"
            android:gravity="top"
            android:lines="1"
            android:maxLines="2"
            android:maxWidth="200sp"
            android:scrollHorizontally="false"
            android:singleLine="false" />
    </TableRow>
    
    <TextView android:text="Type:" />

    <TableRow>

        <RadioGroup
            android:id="@+id/transEditType"
            android:layout_span="2"
            android:orientation="horizontal"
            android:scaleType="fitXY" >

            <RadioButton
                android:id="@+id/transTypeCredit"
                android:scaleX="0.666"
                android:text="CR" />

            <RadioButton
                android:id="@+id/transTypeDebit"
                android:scaleX="0.666"
                android:text="DE" />
        </RadioGroup>
    </TableRow>
    
    <TableRow>

        <TextView
            android:paddingLeft="2px"
            android:paddingRight="2px"
            android:text="Interval(days):" />

        <Spinner
            android:id="@+id/transSpinnerInterval"
            android:digits="0123456789."
            android:inputType="numberDecimal" />
    </TableRow>

    <TableRow>

    <TextView android:text="Description" />

        <EditText
            android:id="@+id/transEditDescription"
            android:gravity="top"
            android:lines="1"
            android:maxLines="2"
            android:maxWidth="200sp"
            android:scrollHorizontally="false"
            android:singleLine="false" />
    </TableRow>

    <Button
        android:id="@+id/transButtonSave"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save" />

</TableLayout>