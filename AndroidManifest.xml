<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.budgetnotebook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.budgetnotebook.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.budgetnotebook.MainMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.budgetnotebook.MAINMENU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.budgetnotebook.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.example.budgetnotebook.DetailActivity" >
        </activity>
        <activity android:name="com.example.budgetnotebook.MenuActivity" >
        </activity>
        <activity
            android:name="com.example.budgetnotebook.AccountActivity"
            android:label="@string/title_activity_account" >
        </activity>
        <activity
            android:name="com.example.budgetnotebook.GoalActivity"
            android:label="@string/title_activity_goal" >
        </activity>
        <activity
            android:name="com.example.budgetnotebook.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name="com.example.budgetnotebook.RecommendActivity"
            android:label="@string/title_activity_recommend" >
        </activity>
        <activity
            android:name="com.example.budgetnotebook.AlertActivity"
            android:label="@string/title_activity_alert" >
        </activity>
        <activity
            android:name="com.example.budgetnotebook.Transaction"
            android:label="@string/title_transaction" >
        </activity>
        
    </application>

</manifest>